<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="changeText"
        android:text="@string/button_start" />

    <TextView
        android:id="@+id/first_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_start"
        android:layout_marginBottom="107dp"
        android:onClick="changeText"
        android:layout_toStartOf="@+id/button_start"
        android:text="@string/first_text_view" />

    <TextView
        android:id="@+id/second_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/first_text_view"
        android:onClick="changeText"
        android:layout_toEndOf="@+id/button_start"
        android:text="@string/second_text_view" />

</RelativeLayout>