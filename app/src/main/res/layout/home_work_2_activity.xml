<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view1"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@color/defaultColo" />

            <View
                android:id="@+id/view2"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_below="@id/view1"
                android:layout_centerHorizontal="true"
                android:background="#FFFFFF" />

            <View
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_below="@id/view2"
                android:layout_centerHorizontal="true"
                android:background="@color/defaultColo" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginStart="132dp"
                android:layout_marginTop="150dp"
                android:orientation="vertical"
                android:weightSum="2">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFFFFF" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#ff0000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginStart="132dp"
                android:layout_marginTop="250dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#048e44" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fcfefc" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#d4222c" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginStart="132dp"
                android:layout_marginTop="350dp"
                android:orientation="vertical"
                android:weightSum="300">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:background="#fcd214" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="110"
                    android:background="#043a94" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="110"
                    android:background="#cc1224" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginStart="132dp"
                android:layout_marginTop="450dp"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="35"
                        android:background="#fcfefc"
                        tools:ignore="NestedWeights" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:orientation="vertical">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:background="#fc3e34"
                        tools:ignore="NestedWeights" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:background="#047e3c"
                        tools:ignore="NestedWeights" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginStart="132dp"
                android:layout_marginTop="550dp"
                android:orientation="vertical"
                android:weightSum="300">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="100"
                    android:orientation="vertical">


                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:background="#cc1224"
                        tools:ignore="NestedWeights" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:background="#fcfefc"
                        tools:ignore="NestedWeights" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="100"
                    android:orientation="vertical">


                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="30"
                        android:background="#04029c"
                        tools:ignore="NestedWeights" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="100"
                    android:orientation="vertical">


                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:background="#fcfefc"
                        tools:ignore="NestedWeights" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:background="#cc1224"
                        tools:ignore="NestedWeights" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginStart="132dp"
                android:layout_marginTop="650dp"
                android:orientation="horizontal"
                android:weightSum="300"
                android:layout_marginEnd="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="90"
                    android:orientation="vertical">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="40"
                        android:background="#d40e34"
                        tools:ignore="NestedWeights" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="60"
                        android:background="#fcfefc"
                        tools:ignore="NestedWeights" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="40"
                        android:background="#d40e34"
                        tools:ignore="NestedWeights" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:background="#fcfefc"
                        tools:ignore="NestedWeights" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="175"
                    android:orientation="vertical">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="40"
                        android:background="#d40e34"
                        tools:ignore="NestedWeights" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="60"
                        android:background="#fcfefc"
                        tools:ignore="NestedWeights" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="40"
                        android:background="#d40e34"
                        tools:ignore="NestedWeights" />

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>